<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:content="http://tom32i.com/schema/dic/content"
           xsi:schemaLocation="http://tom32i.com/schema/dic/content http://tom32i.com/schema/dic/content/content.xsd">

    <content:config>
        <content:provider type="files" class="Foo\Bar">
            <content:config path="%kernel.project_dir%/foo/bar" depth="&lt; 2" >
                <content:pattern>*.md</content:pattern>
                <content:pattern>*.html</content:pattern>
                <content:exclude>excluded.md</content:exclude>
            </content:config>
        </content:provider>

        <content:provider type="custom" class="Foo\Custom">
            <content:config custom_config_key="custom_value">
                <content:custom_sequence>custom_sequence_value_1</content:custom_sequence>
                <content:custom_sequence>custom_sequence_value_2</content:custom_sequence>
            </content:config>
        </content:provider>
    </content:config>
</container>
